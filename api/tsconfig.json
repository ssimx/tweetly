{
  "compilerOptions": {
    "module": "ESNext",  // Use ES modules
    "target": "ESNext",  // Ensure you're targeting the latest features
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",  // Output directory for compiled JS
    "strict": true,  // Enable strict mode for TypeScript
    "lib": ["esnext"],  // Include latest JavaScript features
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"  // Include all TypeScript files in the src folder
  ]
}